<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= t "view.layouts.header.logo" %></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to t("view.layouts.header.home"), root_path %></li>
        <% if logged_in? %>
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "view.account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu multi-level">
            <li><%= link_to t("view.layouts.header.profile"),
              current_user %></li>
            <li><%= link_to t("view.layouts.header.settings"),
              edit_user_path(current_user) %></li>
            <li><%= link_to t("view.layouts.header.logout"),
              logout_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("view.layouts.header.login"), login_path %></li>
        <% end %>
        <% if is_admin? %>
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "view.manager" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu multi-level">
            <li><%= link_to t("view.layouts.header.manager.users"),
              admin_users_path %></li>
            <li><%= link_to t("view.layouts.header.manager.categories"),
              admin_categories_path %></li>
            <li><%= link_to t("view.layouts.header.manager.subcategories"),
              admin_subcategories_path %></li>
            <li><%= link_to t("view.layouts.header.manager.products"),
              admin_products_path %></li>
            <li><%= link_to t("view.layouts.header.manager.orders"),
              admin_orders_path %></li>
          </ul>
        </li>
        <% end %>
        <li>
          <%= link_to t("view.layouts.header.help"), help_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to cartitems_path do %>
            <span class="glyphicon glyphicon-shopping-cart">
              <%= t "view.layouts.header.shop_cart" %>
            </span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

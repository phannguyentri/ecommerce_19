<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t("view.layouts.header.logo"), root_path,
        class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>
            <%= t "view.layouts.header.home" %>
          <% end %>
        </li>
        <% if is_admin? %>
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "view.manager" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu multi-level">
            <li><%= link_to t("view.layouts.header.manager.users"),
              admin_users_path %></li>
            <li><%= link_to t("view.layouts.header.manager.categories"),
              admin_categories_path %></li>
            <li><%= link_to t("view.layouts.header.manager.subcategories"),
              admin_subcategories_path %></li>
            <li><%= link_to t("view.layouts.header.manager.products"),
              admin_products_path %></li>
            <li><%= link_to t("view.layouts.header.manager.orders"),
              admin_orders_path %></li>
          </ul>
        </li>
        <% end %>
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "view.layout.header.list_categories" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <%= render partial: "layouts/list_categories", collection: @all_categories,
              as: :category %>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to cartitems_path do %>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= t "view.layouts.header.shop_cart" %>
          <% end %>
        </li>
        <li>
          <%= link_to search_index_path do %>
            <span class="glyphicon glyphicon-search"></span>
            <%= t "view.layouts.header.search" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "view.layouts.header.history.title" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu multi-level">
              <li><%= link_to t("view.layouts.header.history.order"),
                orders_path %></li>
            </ul>
          </li>
          <li>
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <span class="glyphicon glyphicon-user"></span>
              <%= t "view.layouts.header.account" %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu multi-level">
              <li><%= link_to t("view.layouts.header.profile"),
                current_user %></li>
              <li><%= link_to t("view.layouts.header.settings"),
                edit_user_path(current_user) %></li>
              <li><%= link_to t("view.layouts.header.logout"),
                logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("view.layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

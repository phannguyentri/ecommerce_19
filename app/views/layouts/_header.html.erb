<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("view.layouts.header.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("view.layouts.header.home"), root_path %></li>
        <% if is_admin? %>
        <li><%= link_to t("view.layouts.header.manager.users"), admin_users_path %></li>
        <li><%= link_to t("view.layouts.header.manager.categories"), admin_categories_path %></li>
        <li><%= link_to t("view.layouts.header.manager.subcategories"), admin_subcategories_path %></li>
        <% end %>
        <li><%= link_to t("view.layouts.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("view.layouts.header.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "view.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("view.layouts.header.profile"), current_user %></li>
              <li><%= link_to t("view.layouts.header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("view.layouts.header.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("view.layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

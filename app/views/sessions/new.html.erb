<% provide :title, t("view.sessions.new.title") %>
<h1><%= t "view.sessions.new.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      </div>

      <%= f.submit t("view.sessions.new.btn_login"), class: "btn btn-primary" %>
    <% end %>
    <hr>
    <p><%= t "view.sessions.new.new_user" %> <%= link_to t("view.sessions.new.signup_now"), signup_path %></p>
  </div>
</div>

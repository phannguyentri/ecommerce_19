<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-8">
                        <h4><%= @user.name %></h4>
                        <small><cite><%= @user.address %> <i class="glyphicon glyphicon-map-marker">
                        </i></cite></small>
                        <p id="fix_gly">
                          <i class="glyphicon glyphicon-envelope"></i><%= @user.email %>
                          <br />
                          <i class="glyphicon glyphicon-phone"></i><%= @user.phone %>
                          <br />
                          <i class="glyphicon glyphicon-user"></i>
                          <%= is_admin? ? t("view.user.show.admin") : t("view.user.show.member") %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

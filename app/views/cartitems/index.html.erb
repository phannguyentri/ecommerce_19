<div class="container">
  <h3 class="text-center"><b><%= t "view.cartitems.index.header" %></b></h3>
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t "view.cartitems.index.product" %></th>
        <th><%= t "view.cartitems.index.price" %></th>
        <th><%= t "view.cartitems.index.quantity" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cartitems.each do |key, value| %>
        <% get_products key %>
        <tr>
          <td data-th="Product">
            <div class="row">
              <div class="col-sm-2 hidden-xs">
                <img src="<%= @product.image %>" class="img-responsive"/>
              </div>
              <div class="col-sm-10">
                <h4 class="nomargin"><%= @product.name %></h4>
                <p><%= @product.info %></p>
              </div>
            </div>
          </td>
          <td data-th="Price"><%= @product.price %></td>
          <td data-th="Quantity">
            <input type="number" class="form-control text-center change-quantity"
              value="<%= value %>" min="1">
          </td>
          <td id="<%= key %>" class="actions" data-th="">
            <button class="delete-cartitem btn btn-danger btn-sm">
              <i class="glyphicon glyphicon-trash"></i>
            </button>
            <button data-status="disabled"
              class="btn-change-quantity btn btn-success btn-sm disabled">
              <i class="glyphicon glyphicon-saved"></i>
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

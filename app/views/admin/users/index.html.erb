<% provide :title, t("view.admin.users.index.title") %>
<h1><%= t "view.admin.users.index.header" %></h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t "view.admin.users.index.table_th.order_number" %></th>
      <th><%= t "view.admin.users.index.table_th.name" %></th>
      <th><%= t "view.admin.users.index.table_th.email" %></th>
      <th><%= t "view.admin.users.index.table_th.address" %></th>
      <th><%= t "view.admin.users.index.table_th.phone" %></th>
      <th><%= t "view.edit" %></th>
      <th><%= t "view.delete" %></th>
    </tr>
  </thead>
    <tbody>
    <% @users.each_with_index do |u, index| %>
    <tr>
      <td><%= count_index index %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.address %></td>
      <td><%= u.phone %></td>
      <td><%= link_to t("view.edit"),
        edit_admin_user_path(u), class: "btn btn-success"%>
      </td>
      <td>
      <%= link_to t("view.delete"),
        [:admin, u], method: :delete, class: "btn btn-danger",
        data: {confirm: t("view.sure?")} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
